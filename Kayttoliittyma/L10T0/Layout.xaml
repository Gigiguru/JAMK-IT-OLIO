<Window x:Class="L10T0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L10T0"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="300" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0">Employee basic information</Label>
        <Label Grid.Column="1" Grid.Row="0">Image</Label>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <DockPanel LastChildFill="True" Height="300" Width="auto">
                <Button Content="Dock=Left"/>
                <TextBlock x:Name="Rip" Content="Dock=Left"/>
                
            </DockPanel>

        </StackPanel>
        <Button Grid.Column="1" Grid.Row="1">Button4</Button>
        <Button Grid.Column="0" Grid.Row="2">Button2</Button>
        <Button Grid.Column="1" Grid.Row="2">Button2</Button>
    </Grid>

</Window>