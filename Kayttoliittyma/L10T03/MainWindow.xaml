<Window x:Class="L10T03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L10T03"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="90,47,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="60"/>
        <Button x:Name="Draw" Content="Draw" HorizontalAlignment="Left" Margin="90,87,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="Remove" Content="Remove" HorizontalAlignment="Left" Margin="90,112,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock x:Name="txtOutput" HorizontalAlignment="Left" Margin="260,16,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="271" Width="232" ScrollViewer.CanContentScroll="True"/>

    </Grid>
</Window>
